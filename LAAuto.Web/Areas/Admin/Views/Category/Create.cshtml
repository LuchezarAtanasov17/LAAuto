@using LAAuto.Web.Models.Categories

@model CreateCategoryRequest

<h2 class="text-center">Create category</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <h4 class="form-label text-center">Create category</h4>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input type="text" asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Create" type="submit" value="Save" />
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="List">Cancel</a>
            </div>
        </form>
    </div>
</div>