@using LAAuto.Web.Models.Services;

@model List<ServiceViewModel>

<h2 class="text-center">All services</h2>

<table class="table">
  <thead>
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Owner username</th>
      <th scope="col">Owner email</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
                       <tr>
                         <th scope="row">@(i + 1)</th>
                         <td>@Model[i].Name</td>
                         <td>@Model[i].User.UserName</td>
                         <td>@Model[i].User.Email</td>
                         <td></td>
                         <td></td>
                         <td>
                                  <a class="ml-2 btn btn-danger" asp-area="Admin" asp-controller="Service" asp-action="Delete"
                   asp-route-id="@Model[i].Id">Delete</a>
                         </td>
                       </tr>
        }
  </tbody>
</table>