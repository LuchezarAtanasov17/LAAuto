@using LAAuto.Web.Models.Appointments;

@model List<AppointmentViewModel>

<h2 class="text-center">All categories</h2>

<table class="table">
  <thead>
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Service</th>
      <th scope="col">Appointment setter full name</th>
      <th scope="col">Appointment setter phone number</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
      <th scope="col"></th>
      
    </tr>
  </thead>
  <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
                   <tr>
                     <th scope="row">@(i + 1)</th>
                     <td>@Model[i].Service.Name</td>
                     <td>@($"{Model[i].User.FirstName} {@Model[i].User.LastName}")</td>
                     <td>@Model[i].User.PhoneNumber</td>
                     <td>@Model[i].StartDate</td>
                     <td>@Model[i].EndDate</td>
                     <td>
                              <a class="ml-2 btn btn-danger" asp-area="Admin" asp-controller="Appointment" asp-action="Delete"
                             asp-route-id="@Model[i].Id">Delete</a>
                     </td>
                   </tr>
        }
  </tbody>
</table>