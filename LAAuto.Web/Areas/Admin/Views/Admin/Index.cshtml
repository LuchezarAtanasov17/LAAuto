@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b> and
        <b>delete</b> services and appointments.
    </p>
    <p class="lead mt-1">
        You can <b>read</b>, <b>add</b> and <b>delete</b> categories.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="Admin" asp-controller="Service" asp-action="List"
       class="btn btn-primary btn-lg">All Services</a>

    <a asp-area="Admin" asp-controller="Appointment" asp-action="List"
       class="btn btn-primary btn-lg">All Appointments</a>

    <a asp-area="Admin" asp-controller="Category" asp-action="List"
       class="btn btn-primary btn-lg">All Categories</a>

    <a asp-area="Admin" asp-controller="User" asp-action="List"
       class="btn btn-primary btn-lg">All Users</a>
</div>